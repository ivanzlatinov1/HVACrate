@page
@model LoginModel
@{
    ViewData["Title"] = "Welcome to HVACrate!";
}

<div class="text-dark h-75 d-flex align-items-center">
    <div class="container">
        <h1 class="text-center text-dark mb-5">@ViewData["Title"]</h1>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card bg-white border-dark">
                    <div class="card-body p-4">
                        <section>
                            <form id="account" method="post">
                                <h2 class="text-center text-dark mb-4">Use a local account to log in</h2>
                                <hr class="border-dark mb-4" />
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Username" class="form-control bg-white text-dark border-dark" autocomplete="username" aria-required="true" placeholder="username_example" />
                                    <label asp-for="Input.Username" class="form-label text-dark">Username</label>
                                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Input.Password" class="form-control bg-white text-dark border-dark" autocomplete="current-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password" class="form-label text-dark">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-check mb-4">
                                    <input class="form-check-input bg-white border-dark" asp-for="Input.RememberMe" type="checkbox" />
                                    <label asp-for="Input.RememberMe" class="form-check-label text-dark">
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>

                                <div class="mb-4">
                                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark text-white fw-bold">Log in</button>
                                </div>

                                <div class="text-center">
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-dark text-decoration-none">
                                        Register as a new user
                                    </a>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="Partials/_ValidationScriptsPartial" />
}