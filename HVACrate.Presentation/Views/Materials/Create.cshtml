@model MaterialFormModel
@{
    ViewData["Title"] = "Create Material";
}

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BuildingEnvelopeRoomId" />
    <input type="hidden" asp-for="BuildingEnvelopeType" />
    <div class="form-group mb-3">
        <label asp-for="Type" class="form-label h5 text-dark mb-2">Material Type</label>
        <input asp-for="Type" class="form-control border-dark"
               placeholder="Enter material type" />
        <span asp-validation-for="Type" class="text-danger small mt-1 d-block"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ThermalConductivity" class="form-label h5 text-dark mb-2">Thermal Conductivity</label>
        <div class="input-group">
            <input asp-for="ThermalConductivity" class="form-control border-dark"
                   type="number" step="any"
                   placeholder="Enter thermal conductivity value" />
            <span class="input-group-text bg-dark text-white border-dark">W/(m·K)</span>
        </div>
        <span asp-validation-for="ThermalConductivity" class="text-danger small mt-1 d-block"></span>
    </div>
    <div class="d-grid mt-4">
        <button type="submit" class="btn btn-dark fw-semibold">
            @ViewData["Title"]
        </button>
    </div>
</form>

@section Scripts {
    <partial name="Partials/_ValidationScriptsPartial" />
}