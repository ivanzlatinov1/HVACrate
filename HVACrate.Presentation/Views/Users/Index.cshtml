@using HVACrate.Domain.ValueObjects
@model (HVACUserViewModel[] Users, int Count, Pagination Pagination)

@{
    ViewData["Title"] = "Users Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

    <partial name="_SearchPartial" />

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Registered On</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.RegisteredOn</td>
                        <td>@user.Role</td>
                        <td class="text-center">
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-2">Details</a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end">
        <h5 class="text-muted">Total Users: <span class="badge bg-secondary">@Model.Count</span></h5>
    </div>

    <partial name="_PaginationPartial"
             view-data="ViewData"
             model="(Model.Count, Model.Pagination)" />

</div>
