@model HVACUserDetailsViewModel

@{
    ViewData["Title"] = "User Details";
}

<div class="card" style="max-width: 800px; margin: auto;">
    <h2 class="text-center">User Details</h2>
    <div class="card-header bg-black text-white">
        <h3>@Model.Username</h3>
    </div>
    <div class="card-body d-flex flex-row">
        <div class="flex-grow-1 me-4">
            <dl class="row">
                <dt class="col-sm-4">User ID</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@(Model.FirstName ?? "Not provided")</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@(Model.LastName ?? "Not provided")</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Registered On</dt>
                <dd class="col-sm-8">@Model.RegisteredOn</dd>

                <dt class="col-sm-4">Role</dt>
                <dd class="col-sm-8">@Model.Role</dd>

                <dt class="col-sm-4">Count of projects</dt>
                <dd class="col-sm-8">@Model.ProjectsCount</dd>
            </dl>
        </div>

        <div class="text-center">
            <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />
            <p class="mt-2 text-muted">Profile Picture</p>
        </div>
    </div>
    <div class="card-footer text-center">
        <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
