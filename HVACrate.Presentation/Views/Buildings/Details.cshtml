@model BuildingDetailsViewModel
@{
    ViewData["Title"] = "Building Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-dark">@ViewData["Title"]</h1>
                <a asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-dark">
                    <i class="fas fa-arrow-left me-2"></i>Back to Buildings
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-dark text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-building me-2"></i>@Model.Name
                    </h3>
                </div>
                <div class="card-body bg-light">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4 mb-4">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="width: 100%; height: 250px; object-fit: cover;">
                            </div>
                        }
                        <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "col-12" : "col-md-8")">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-map-marker-alt me-1"></i>Location
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.Location</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-compass me-1"></i>Orientation
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.Orientation</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-ruler-vertical me-1"></i>Total Height
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.TotalHeight m</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-layer-group me-1"></i>Floors
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.Floors</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-wind me-1"></i>Wind Speed
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.WindSpeed m/s</p>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="border rounded p-3 bg-white">
                                        <small class="text-muted">
                                            <i class="fas fa-project-diagram me-1"></i>Project
                                        </small>
                                        <p class="text-dark mb-0 fw-bold">@Model.ProjectName</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-dark me-2">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>