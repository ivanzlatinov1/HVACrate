@model BuildingViewModel
@{
    ViewData["Title"] = "Delete Building";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-dark">@ViewData["Title"]</h1>
                <a asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left me-2"></i>Back to Buildings
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                    </h3>
                </div>
                <div class="card-body bg-light">
                    <div class="alert alert-danger border-0" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone. Are you sure you want to delete this building?
                    </div>

                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4 mb-4">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="width: 100%; height: 200px; object-fit: cover;">
                            </div>
                        }
                        <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "col-12" : "col-md-8")">
                            <div class="border rounded p-4 bg-white">
                                <h4 class="text-dark mb-3">
                                    <i class="fas fa-building me-2"></i>@Model.Name
                                </h4>
                                <div class="text-muted">
                                    <small>From project: @Model.ProjectName</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-outline-dark">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <div>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ProjectId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-2"></i>Delete Building
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>